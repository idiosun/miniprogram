/* pages/post-detail/post-detil.wxss */
.container {
    display: flex;
    flex-direction: column;
}

.headImg {
    width: 100%;
    height: 430rpx;
}

.author {
    margin-top: 20rpx;
    margin-left: 30rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
}

.author image {
    width: 64rpx;
    height: 64rpx;
    border-radius: 50%;
    margin-right: 20rpx;
}

.author .name {
    font-weight: 300;
    margin-right: 20rpx;
    font-size: 35rpx;
    color: #666;
}

.author .const {
    margin-right: 20rpx;
    font-size: 28rpx;
    color: #999;
}

.author .time {
    margin-right: 30rpx;
    font-size: 28rpx;
    color: #999;
}

.title {
    font-weight: bold;
    margin-left: 40rpx;
    font-size: 36rpx;
    margin-top: 30rpx;
    color: #4b556c;
    letter-spacing: 3rpx;
}

.circle-line {
    /* float: right;
