.share,
.like {
    width: 90rpx;
    height: 90rpx;
    border-radius: 50%
}
.like {
    margin-left: 30rpx;
}
.two {
    width: 660rpx;
    display: flex;
    flex-direction: row;
    /* vertical-align: middle;
    float: right; */
    justify-content: flex-end;
}
.main {
    color: #666;
    margin: 20rpx 30rpx 0 30rpx;
    line-height: 44rpx;
    letter-spacing: 2px;
    font-size: 24rpx;
    text-indent: 2em;
}