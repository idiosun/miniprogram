/* pages/posts/posts.wxss */
swiper image {
  width: 100%;
  height: 460rpx;
}
swiper {
  width: 100%;
  height: 460rpx;
}
.post-container {
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
  background-color: #fff;
  border-top: #ededed 1px solid;
  border-bottom: #ededed 1px solid;
  padding-bottom: 20rpx;
}
.author-date {
  margin: 10rpx 0 20rpx 10rpx;
  display: flex;
  align-items: center;
}
.author-date image {
  width: 60rpx;
  height: 60rpx;
}
.author-date text {
  margin-left: 20rpx;
  font-size: 26rpx;
}
.title {
  font-weight: bold;
  font-size: 32rpx;
  margin-bottom: 20rpx;
  color: #333;
}
.main-image {
  width: 100%;
  height: 340rpx;
  margin-bottom: 30rpx;
}
.main-text {
  color: #666;
  font-size: 28rpx;
  line-height: 40rpx;
  margin-bottom: 20rpx;
  margin-left: 20rpx;
  letter-spacing: 2rpx;
}
.message {
  display: flex;
  align-items: center;
}
.message image {
  margin: 0 16rpx;
  width: 36rpx;
  height: 36rpx;
}
.message text {
  font-size: 26rpx;
}
